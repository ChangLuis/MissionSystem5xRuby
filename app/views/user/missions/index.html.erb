<h1>missions list</h1>

<%= link_to t("create_new_mission"), new_user_mission_path %>
<br /><br/>

<table>
  <tr>
    <th><%= t "missions_idx" %></th> 
    <th><%= t "mission_title" %></th> 
    <th><%= t "mission_status" %></th> 
    <th><%= t "mission_priority_order" %></th>
    <th><%= t "mission_initial_time_at" %></th>
    <th><%= t "mission_finish_time_at" %></th>
  </tr>
  <% @missions.each.with_index(1) do |mission, idx| %>
    <tr>
      <td><%= idx %></td>
      <td><%= mission.title %></td>
      <td><%= mission.status %></td>
      <td><%= mission.priority_order %></td>
      <td><%= mission.initial_time_at %></td>
      <td><%= mission.finish_time_at %></td>
      <td><%= link_to t("mission_detail"), user_mission_path(mission) %></td>
    </tr>
  <% end %>
</table>