<div class="form-group row" id="admin-users-title-fixed">
	<div	class="col-md-2 offset-md-10">
		<span>Admin Counts:</span> 
		<span style="font-size:2em"><%= obj.count %></span>
	</div>
</div>

<table class="table table-hover table-sm shadow-none p-3 mb-5 bg-light rounded rounded-pill center text-monospace">
  <thead>
    <tr>
      <th scope="col">NO.</th>
      <th scope='col'><%= t "user.account" %></th> 
      <th scope='col'><%= t "user.name" %></th>
      <th scope='col'>建立時間</th>
			<th scope="col">更新時間</th>
    </tr>
  </thead>
  <tbody>
		<% obj.each.with_index(1) do |user, idx| %>
      <tr>
        <td scope="row"><%= idx %></td>
        <td><%= user.account %></td>
        <td><%= user.name %></td>
        <td><%= format_datetime(user.created_at) %></td>
        <td><%= format_datetime(user.updated_at)%></td>
      </tr>
    <% end %>
  </tbody>
</table>